<script>
  import emailjs from "@emailjs/browser";

  // Inicializar EmailJS
  emailjs.init("LmSD9ap_7pAWdus8F");

  document.addEventListener("DOMContentLoaded", function () {
    const form = document.getElementById("contact-form");
    if (form) {
      form.addEventListener("submit", function (e) {
        e.preventDefault();

        const statusMessage = document.getElementById("form-status");
        if (statusMessage) {
          statusMessage.textContent = "Enviando mensaje...";
        }

        emailjs.sendForm("service_pg2axtt", "template_p92kcss", this).then(
          () => {
            if (statusMessage) {
              statusMessage.textContent = "‚úÖ ¬°Mensaje enviado!";
            }
            form.reset();
          },
          (error) => {
            if (statusMessage) {
              statusMessage.textContent = "‚ùå Error al enviar el mensaje.";
            }
            console.error("EmailJS error:", error);
          }
        );
      });
    }
  });
</script>
